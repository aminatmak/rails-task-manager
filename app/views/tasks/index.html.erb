<div>
  <h1>My tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %> -
        <%= link_to 'Delete',
                    task_path(task),
                    method: :delete,
                    data: { confirm: "Delete #{task.title} ?" } %>
        <%= <i class=""> %>
      </li>
    <% end %>

  </ul>

<br>
<%= link_to 'Add a new task', new_task_path %>
</div>
